<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="rulesqueezebox" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="rulesqueezebox" scope="public">
    <example>Sarah allume la lampe du salon</example>
    <tag>out.action=new Object(); </tag>
    <item weight="2">Sarah</item>
    <one-of>
      <item>allume<tag>out.action.request="power 1"</tag></item>
      <item>eteint<tag>out.action.request="power 0"</tag></item>
	  <item>met sur pause<tag>out.action.request="pause "</tag></item>
	  <item>lecture<tag>out.action.request="play "</tag></item>
	  <item>monte le son<tag>out.action.request="mixer volume  +10 "</tag></item>
	  <item>baisse le son<tag>out.action.request="mixer volume  -10 "</tag></item>
	  <item>coupe le son<tag>out.action.request="mixer muting 1 "</tag></item>
	  <item>remet le son<tag>out.action.request="mixer muting 0 "</tag></item>
	  <item>les lecteurs<tag>out.action.request="players 0 2 "</tag></item>
	  <item>quel est le mode<tag>out.action.request="mode ";out.action.question="? "</tag></item>
	  <item>quelle est la musique encours<tag>out.action.request="current_title ";out.action.question="? "</tag></item>
	  <item>quel artiste est<tag>out.action.request="artist ";out.action.question="? "</tag></item>
	  <item>quel album est<tag>out.action.request="album ";out.action.question="? "</tag></item>
    </one-of>
    <one-of>
      <item>dans la chambre<tag>out.action.periphId="00:04:20:2b:d6:c0 ";out.action.periphName="chambre "</tag></item>
	  <item>dans l'entree<tag>out.action.periphId="00:00:00:00:00:01 ";out.action.periphName="entree "</tag></item>
    </one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/squeezebox";</tag>
  </rule>
</grammar>
	